{
  "name": "preshape",
  "version": "0.0.0-development",
  "description": "A minimal design system and library of composable React components, primarily for my personal projects.",
  "repository": "git@github.com:HHogg/preshape.git",
  "author": "Harry Hogg <harry@hogg.io>",
  "license": "MIT",
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "esnext": "lib/esn/index.js",
  "typings": "lib/esm/index.d.ts",
  "scripts": {
    "build:css": "postcss src/{*.css,**/*.css} --base src",
    "build:docs": "typedoc --json site/assets/documentation.json src",
    "build:lib": "rm -rf lib && yarn build:lib:cjs && yarn build:lib:esm && yarn build:lib:esn",
    "build:lib:cjs": "tsc -p src -m commonjs --outDir lib/cjs && yarn build:css --dir lib/cjs",
    "build:lib:esm": "tsc -p src --outDir lib/esm && yarn build:css --dir lib/esm",
    "build:lib:esn": "tsc -p src -t esnext --outDir lib/esn && yarn build:css --dir lib/esn",
    "build:site": "rm -rf public && parcel build site/index.html -d public",
    "lint:css": "stylelint site/**/*.css src/**/*.css",
    "lint:js": "eslint src/**/*.tsx src/**/*.ts",
    "lint": "yarn lint:js && yarn lint:css",
    "semantic-release": "semantic-release",
    "start": "rm -rf dist && parcel site/index.html --port 4000 -d dist",
    "travis-deploy-once": "travis-deploy-once"
  },
  "peerDependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-router-dom": "^5.1.2"
  },
  "dependencies": {
    "classnames": "^2.2.5",
    "framer-motion": "^1.7.0",
    "lodash.debounce": "^4.0.8",
    "lodash.omit": "^4.5.0",
    "normalize.css": "^8.0.0",
    "open-color": "^1.6.3",
    "prismjs": "^1.14.0",
    "react-popper": "^1.3.7",
    "remarkable": "^2.0.0",
    "remarkable-react": "^1.4.1",
    "resize-observer-polyfill": "^1.5.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^2.0.2",
    "@semantic-release/git": "^5.0.0",
    "@svgr/parcel-plugin-svgr": "^5.0.1",
    "@types/classnames": "*",
    "@types/lodash.debounce": "*",
    "@types/lodash.omit": "^4.5.6",
    "@types/lodash.pick": "*",
    "@types/prismjs": "*",
    "@types/react": "*",
    "@types/react-dom": "*",
    "@types/react-router-dom": "*",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "autoprefixer": "^9.4.10",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.1",
    "caniuse-lite": "^1.0.30000697",
    "eslint": "^5.15.1",
    "eslint-config-preshape": "^1.1.0",
    "eslint-plugin-react": "^7.12.4",
    "lodash.pick": "^4.4.0",
    "parcel-bundler": "^1.12.3",
    "postcss-cli": "^6.1.3",
    "postcss-preset-env": "^6.6.0",
    "react": ">=16.6.0",
    "react-dom": ">=16.6.0",
    "react-router-dom": "^5.1.2",
    "react-snap": "^1.23.0",
    "react-test-renderer": "^16.3.2",
    "semantic-release": "^15.9.8",
    "stylelint": "^9.2.0",
    "stylelint-config-preshape": "^1.0.0",
    "stylelint-order": "^0.8.1",
    "travis-deploy-once": "^5.0.2",
    "typedoc": "^0.15.5",
    "typescript": "^3.4.5"
  },
  "alias": {
    "preshape": "./src"
  },
  "marked": null,
  "reactSnap": {
    "source": "public",
    "minifyHtml": {
      "collapseWhitespace": false,
      "removeComments": false
    }
  }
}
